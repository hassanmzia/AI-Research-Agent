# ============================================
# AI Research Multi-Agent System Configuration
# ============================================

# OpenAI / Azure OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL_NAME=gpt-4o-mini

# PostgreSQL Database
POSTGRES_DB=ai_research
POSTGRES_USER=researcher
POSTGRES_PASSWORD=secure-password-change-me
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://researcher:secure-password-change-me@postgres:5432/ai_research

# Redis (for Celery task queue & caching)
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1

# Django Settings
DJANGO_SECRET_KEY=change-this-to-a-random-secret-key
DJANGO_DEBUG=true
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,backend

# Node.js Gateway
GATEWAY_PORT=3001
JWT_SECRET=change-this-jwt-secret
BACKEND_URL=http://backend:8000

# Frontend
REACT_APP_API_URL=http://localhost:3001
REACT_APP_WS_URL=ws://localhost:3001

# Research Configuration
MAX_PAPERS_PER_RUN=10
RESEARCH_DAYS_LOOKBACK=14
MAX_RETRIES=3
REQUEST_TIMEOUT=120

# MCP Server Configuration
MCP_SERVER_PORT=8001
MCP_TOOL_TIMEOUT=300

# A2A Protocol Configuration
A2A_AGENT_PORT=8002
A2A_DISCOVERY_ENABLED=true
